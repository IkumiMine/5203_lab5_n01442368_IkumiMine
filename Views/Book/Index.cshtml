@model IEnumerable<lab5.Models.Book>
@{
    ViewData["Title"] = "Books";
}
<h1>Books</h1>
<div>
    <a asp-action="Create" class="btn btn-default">Add a book</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author Title</th>
            <th>First name</th>
            <th>Middle name</th>
            <th>Last name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.ID)</td>
                <td>@Html.DisplayFor(m => item.Title)</td>
                <td>@Html.DisplayFor(m => item.AuthorTitle)</td>
                <td>@Html.DisplayFor(m => item.FirstName)</td>
                <td>@Html.DisplayFor(m => item.MiddleName)</td>
                <td>@Html.DisplayFor(m => item.LastName)</td>
            </tr>
        }
    </tbody>
</table>
       